<div class="container">
  <div class="form-bookmark">
    <h4>Whack a movie onto the list...</h4>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie %>
      <%= f.input :comment %>
      <%= f.button :submit, 'Submit', class: 'btn btn-success'  %>
    <% end %>
  </div>
</div>
